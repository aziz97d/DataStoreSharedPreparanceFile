<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ccc"
    android:orientation="vertical"
    tools:context=".RestaurantActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Welcome to Restaurant"
        />
    <TextView
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:text="SQLite Practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_item_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:shadowColor="@color/colorAccent"
        android:outlineAmbientShadowColor="@color/colorGreen"
        android:layout_marginTop="50dp"
        android:hint="Enter Item Name"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_category"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:shadowColor="@color/colorAccent"
        android:outlineAmbientShadowColor="@color/colorGreen"
        android:layout_marginTop="25dp"
        android:hint="Enter Category Name"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_price"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:shadowColor="@color/colorAccent"
        android:outlineAmbientShadowColor="@color/colorGreen"
        android:layout_marginTop="25dp"
        android:hint="Enter Price"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_add_item"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Item"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:background="@color/colorPurple"
        android:drawableRight="@drawable/add_item_icon"

        />
    <Button
        android:id="@+id/btn_show_item"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Show Item"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:background="@color/colorPurple"
        android:drawableRight="@drawable/list_item_icon"
        />

</LinearLayout>